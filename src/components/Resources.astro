---
const { resources } = Astro.props;
---

<h2>Further Reading & Sources</h2>
<ul>
	{
		resources.map((item: any, index: number) => {
			const type = item.type;
			return (
				<>
					<li class={`resource ${type} h-entry`}>
						<a href={item.url} class={`u-${type}-of h-cite p-name`}>
							{item.title}
						</a>
						<span class="p-author">{item.author}</span>
						{item.desc && (
							<p class="resource-desc e-content">&#11180; {item.desc}</p>
						)}
					</li>
				</>
			);
		})
	}
</ul>

<style>
	ul {
		max-width: var(--main);
		line-height: 2;
		list-style: none;
		padding-left: 0;
	}

	li.resource::before {
